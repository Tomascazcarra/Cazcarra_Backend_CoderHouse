<div>
    <h1>Bienvenido, {{user.name}}.</h1>
    <h2>Su rol es: {{user.role}}.</h2>
</div>


<div>
    <h2>Estos son los productos registrados en MONGO</h2>
    {{#each products}}
    <div>
        <p> Titulo:
            {{this.title}}
        </p>
        <p> Descripcion:
            {{this.description}}
        </p>
        <p> Precio:
            {{this.price}}
        </p>
        <p> Stock disponible:
            {{this.stock}}
        </p>
        <p> Categoria:
            {{this.category}}
        </p>
        <a href="/carts"><button>agregar a carrito</button></a> 
    </div>
    <br>
    {{/each}}
    <br>
    <div>
    {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

    {{page}}

    {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}
    </div>
    <br>
    <div>
        <button id="boton_logout">Logout</button>
    </div>
</div>

<script src="js/product.js"></script>